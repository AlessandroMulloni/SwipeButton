    <alpha
        android:fromAlpha="1.0"
        android:toAlpha="0.0"
        />

    <scale
        android:toXScale="1000.0"
        android:toYScale="1000.0"
        android:pivotX="50%"
        android:pivotY="50%"
        />
</set>